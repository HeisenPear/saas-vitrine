---
import { ArrowRight } from 'lucide-react';
import ScrollReveal from './react/ScrollReveal';

interface Props {
  icon: any;
  title: string;
  description: string;
  price: string;
  href: string;
  delay?: number;
}

const { icon: Icon, title, description, price, href, delay = 0 } = Astro.props;
---

<ScrollReveal client:load delay={delay}>
  <div class="group glass rounded-2xl p-8 hover:bg-white/10 transition-all duration-500 hover:scale-105 hover:-translate-y-2">
    <div class="mb-6 w-16 h-16 bg-gradient-to-br from-primary-500 to-accent rounded-xl flex items-center justify-center transform group-hover:rotate-6 transition-transform duration-300">
      <Icon size={32} className="text-white" />
    </div>

    <h3 class="text-xl md:text-2xl font-heading font-bold text-white mb-4">{title}</h3>
    <p class="text-base md:text-lg text-gray-400 mb-6 leading-relaxed">{description}</p>

    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm text-gray-500 mb-1">Ã€ partir de</p>
        <p class="text-xl md:text-2xl font-bold text-gradient">{price}</p>
      </div>
      <a
        href={href}
        class="w-12 h-12 bg-accent/20 hover:bg-accent rounded-full flex items-center justify-center transition-all duration-300 group-hover:scale-110"
        aria-label={`En savoir plus sur ${title}`}
      >
        <ArrowRight size={20} className="text-accent group-hover:text-white transition-colors" />
      </a>
    </div>
  </div>
</ScrollReveal>
