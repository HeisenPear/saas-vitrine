---
import { ArrowRight, Sparkles } from 'lucide-react';
---

<section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
  <!-- Animated Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-dark-900 via-dark-800 to-dark-900">
    <div class="absolute inset-0 opacity-30">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary-500/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-accent/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    </div>
  </div>

  <!-- Content -->
  <div class="relative container mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Badge -->
      <div class="inline-flex items-center space-x-2 px-4 py-2 bg-white/5 backdrop-blur-sm border border-white/10 rounded-full mb-8 animate-fade-in">
        <Sparkles size={18} className="text-accent" />
        <span class="text-sm md:text-base text-gray-300">Spécialiste SEO Local</span>
      </div>

      <!-- Main Heading -->
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-heading font-bold mb-6 animate-slide-up leading-tight">
        <span class="text-gradient">Transformez Votre</span>
        <br />
        <span class="text-white">Visibilité En Ligne</span>
      </h1>

      <!-- Subheading -->
      <p class="text-base md:text-lg lg:text-xl text-gray-300 mb-12 max-w-2xl mx-auto animate-slide-up leading-relaxed" style="animation-delay: 0.2s;">
        Sites web performants + SEO local pour artisans et commerces.<br />
        Augmentez votre visibilité et générez plus de clients.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-slide-up" style="animation-delay: 0.4s;">
        <a
          href="/contact"
          class="btn-primary inline-flex items-center space-x-2 group"
        >
          <span>Demander un devis gratuit</span>
          <ArrowRight size={20} className="group-hover:translate-x-1 transition-transform" />
        </a>
        <a
          href="/realisations"
          class="btn-secondary inline-flex items-center"
        >
          Voir mes réalisations
        </a>
      </div>

      <!-- Stats -->
      <div class="mt-20 grid grid-cols-2 md:grid-cols-4 gap-8 max-w-3xl mx-auto">
        {[
          { value: '50+', label: 'Clients satisfaits' },
          { value: '95+', label: 'Score Lighthouse' },
          { value: '+150%', label: 'Trafic moyen' },
          { value: '24h', label: 'Réponse garantie' },
        ].map((stat) => (
          <div class="text-center animate-scale-in">
            <div class="text-3xl md:text-4xl lg:text-5xl font-bold text-gradient mb-2">{stat.value}</div>
            <div class="text-sm md:text-base text-gray-400">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 border-2 border-white/30 rounded-full flex items-start justify-center p-2">
      <div class="w-1.5 h-2 bg-accent rounded-full"></div>
    </div>
  </div>
</section>
