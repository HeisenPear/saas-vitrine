---
import { Mail, Phone, MapPin, Linkedin } from 'lucide-react';

const currentYear = new Date().getFullYear();

const services = [
  { name: 'Création de Sites Web', href: '/services#creation-site' },
  { name: 'SEO Local', href: '/services#seo-local' },
  { name: 'Maintenance SEO', href: '/services#maintenance' },
];

const quickLinks = [
  { name: 'À propos', href: '/a-propos' },
  { name: 'Portfolio', href: '/realisations' },
  { name: 'Blog', href: '/blog' },
  { name: 'Tarifs', href: '/tarifs' },
];
---

<footer class="bg-dark-800 border-t border-white/10 mt-24">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Brand -->
      <div>
        <div class="flex items-center space-x-2 mb-4">
          <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-accent rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-xl">R</span>
          </div>
          <span class="text-xl font-bold text-gradient">Renaissance</span>
        </div>
        <p class="text-gray-400 mb-6">
          Spécialiste SEO local et création de sites web pour artisans et PME.
        </p>
        <div class="flex space-x-4">
          <a
            href="https://linkedin.com"
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 bg-white/10 hover:bg-accent rounded-lg transition-all duration-300 hover:scale-110"
            aria-label="LinkedIn"
          >
            <Linkedin size={20} className="text-gray-300" />
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-lg font-bold text-white mb-4">Services</h3>
        <ul class="space-y-3">
          {services.map((service) => (
            <li>
              <a
                href={service.href}
                class="text-gray-400 hover:text-accent transition-colors"
              >
                {service.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-bold text-white mb-4">Liens Rapides</h3>
        <ul class="space-y-3">
          {quickLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-400 hover:text-accent transition-colors"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-bold text-white mb-4">Contact</h3>
        <ul class="space-y-3">
          <li class="flex items-start space-x-3">
            <Mail size={20} className="text-accent mt-1 flex-shrink-0" />
            <a href="mailto:renaissance.toursweb@gmail.com" class="text-gray-400 hover:text-accent transition-colors">
              renaissance.toursweb@gmail.com
            </a>
          </li>
          <li class="flex items-start space-x-3">
            <Phone size={20} className="text-accent mt-1 flex-shrink-0" />
            <a href="tel:+33782760284" class="text-gray-400 hover:text-accent transition-colors">
              07 82 76 02 84
            </a>
          </li>
          <li class="flex items-start space-x-3">
            <MapPin size={20} className="text-accent mt-1 flex-shrink-0" />
            <span class="text-gray-400">
              Tours, France
            </span>
          </li>
        </ul>
        <div class="mt-4 p-3 bg-accent/10 border border-accent/20 rounded-lg">
          <p class="text-sm text-gray-300">
            Réponse sous <span class="text-accent font-semibold">24h</span>
          </p>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/10 mt-12 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-gray-400 text-sm">
          &copy; {currentYear} Renaissance. Tous droits réservés.
        </p>
        <div class="flex space-x-6 text-sm">
          <a href="/mentions-legales" class="text-gray-400 hover:text-accent transition-colors">
            Mentions légales
          </a>
          <a href="/politique-confidentialite" class="text-gray-400 hover:text-accent transition-colors">
            Confidentialité
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
