---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { Calendar, Clock, Tag, ArrowLeft, Share2 } from 'lucide-react';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
const { title, description, pubDate, author, category, readTime, tags } = post.data;

// Get related posts
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter((p) => p.slug !== post.slug && p.data.category === category)
  .slice(0, 3);
---

<Layout title={`${title} | Blog Renaissance`} description={description}>
  <!-- Breadcrumb -->
  <div class="bg-dark-800/50 py-6 border-b border-white/10">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <a
        href="/blog"
        class="inline-flex items-center space-x-2 text-gray-400 hover:text-accent transition-colors"
      >
        <ArrowLeft size={20} />
        <span>Retour au blog</span>
      </a>
    </div>
  </div>

  <!-- Article -->
  <article class="py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">

        <!-- Header -->
        <header class="mb-12">
          <!-- Category -->
          <div class="flex items-center space-x-4 mb-6">
            <span class="px-4 py-2 bg-accent/20 border border-accent/30 rounded-full text-accent font-semibold">
              {category}
            </span>
          </div>

          <!-- Title -->
          <h1 class="text-fluid-4xl md:text-5xl font-heading font-bold text-white mb-6">
            {title}
          </h1>

          <!-- Meta -->
          <div class="flex flex-wrap items-center gap-6 text-gray-400 mb-8">
            <div class="flex items-center space-x-2">
              <Calendar size={18} />
              <time datetime={pubDate.toISOString()}>
                {pubDate.toLocaleDateString('fr-FR', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
            </div>
            <div class="flex items-center space-x-2">
              <Clock size={18} />
              <span>{readTime}</span>
            </div>
            <div class="flex items-center space-x-2">
              <span>Par {author}</span>
            </div>
          </div>

          <!-- Tags -->
          <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <span class="px-3 py-1 bg-white/5 border border-white/10 rounded-full text-sm text-gray-400">
                #{tag}
              </span>
            ))}
          </div>
        </header>

        <!-- Content -->
        <div class="prose prose-invert prose-lg max-w-none mb-12">
          <Content />
        </div>

        <!-- Share -->
        <div class="glass rounded-xl p-6 mb-12">
          <div class="flex items-center justify-between">
            <span class="text-white font-semibold">Partager cet article</span>
            <div class="flex items-center space-x-3">
              <button
                class="p-2 bg-white/5 hover:bg-white/10 rounded-lg transition-colors"
                aria-label="Partager sur Twitter"
              >
                <Share2 size={20} className="text-gray-400" />
              </button>
            </div>
          </div>
        </div>

        <!-- Author CTA -->
        <div class="glass rounded-2xl p-8 bg-gradient-to-br from-accent/10 to-primary-500/10 border border-accent/20 mb-12">
          <h3 class="text-2xl font-heading font-bold text-white mb-4">
            Besoin d'Aide Pour Votre Projet ?
          </h3>
          <p class="text-gray-300 mb-6">
            Je vous aide à créer un site web performant et à améliorer votre référencement local.
            Devis gratuit sous 24h.
          </p>
          <a href="/contact" class="btn-primary inline-flex items-center">
            Demander un devis gratuit
          </a>
        </div>

        <!-- Related Posts -->
        {relatedPosts.length > 0 && (
          <div>
            <h2 class="text-fluid-3xl font-heading font-bold text-white mb-8">
              Articles <span class="text-gradient">Similaires</span>
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              {relatedPosts.map((relatedPost) => (
                <a
                  href={`/blog/${relatedPost.slug}`}
                  class="glass rounded-xl p-6 hover:bg-white/10 transition-all duration-300 hover:scale-105"
                >
                  <span class="text-xs text-accent font-semibold mb-2 block">
                    {relatedPost.data.category}
                  </span>
                  <h3 class="text-lg font-semibold text-white mb-3 hover:text-gradient transition-colors">
                    {relatedPost.data.title}
                  </h3>
                  <div class="flex items-center space-x-2 text-sm text-gray-400">
                    <Clock size={14} />
                    <span>{relatedPost.data.readTime}</span>
                  </div>
                </a>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  </article>
</Layout>
