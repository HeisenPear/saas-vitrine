---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/react/ContactForm';
import ScrollReveal from '../components/react/ScrollReveal';
import { Mail, Phone, MapPin, Clock, Send } from 'lucide-react';
---

<Layout
  title="Contact - Demandez votre Devis Gratuit | Renaissance Tours"
  description="Contactez Renaissance pour votre projet web ou SEO à Tours. Réponse garantie sous 24h. Devis gratuit et sans engagement. Tel: 07 82 76 02 84"
  keywords="contact agence web Tours, devis site internet Tours, demande devis SEO, contact webmaster, projet web Tours, consultation SEO"
  image="/images/og-contact.jpg"
>
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-dark-900 via-dark-800 to-dark-900 relative overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-1/4 right-1/4 w-96 h-96 bg-primary-500/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 left-1/4 w-96 h-96 bg-accent/20 rounded-full blur-3xl"></div>
    </div>

    <div class="relative container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <ScrollReveal client:load>
        <div class="inline-flex items-center space-x-2 px-4 py-2 bg-accent/20 border border-accent/30 rounded-full mb-6">
          <Send size={16} className="text-accent" />
          <span class="text-sm text-accent font-semibold">Réponse sous 24h garantie</span>
        </div>
      </ScrollReveal>
      <ScrollReveal client:load delay={0.2}>
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-heading font-bold text-white mb-6">
          Parlons de Votre <span class="text-gradient">Projet</span>
        </h1>
      </ScrollReveal>
      <ScrollReveal client:load delay={0.3}>
        <p class="text-lg md:text-xl lg:text-2xl text-gray-300 max-w-3xl mx-auto">
          Obtenez un devis gratuit et personnalisé pour votre site web ou votre stratégie SEO
        </p>
      </ScrollReveal>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 max-w-7xl mx-auto">

        <!-- Contact Info -->
        <div>
          <ScrollReveal client:load direction="left" delay={0.1}>
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-heading font-bold text-white mb-6">
              Restons en Contact
            </h2>
          </ScrollReveal>
          <ScrollReveal client:load direction="left" delay={0.2}>
            <p class="text-lg text-gray-300 mb-10 leading-relaxed">
              Vous avez un projet en tête ? Besoin de conseils pour améliorer votre visibilité ?
              Je suis là pour vous aider. Remplissez le formulaire et je vous réponds sous 24h.
            </p>
          </ScrollReveal>

          <!-- Contact Cards -->
          <div class="space-y-6">
            <ScrollReveal client:load direction="left" delay={0.3}>
              <div class="glass rounded-xl p-6 hover:bg-white/10 transition-all duration-300 flex items-start space-x-4">
                <div class="w-12 h-12 bg-accent/20 rounded-lg flex items-center justify-center flex-shrink-0">
                  <Mail size={24} className="text-accent" />
                </div>
                <div>
                  <h3 class="text-white font-semibold mb-2">Email</h3>
                  <a href="mailto:renaissance.web@gmail.com" class="text-gray-300 hover:text-accent transition-colors">
                    renaissance.toursweb@gmail.com
                  </a>
                  <p class="text-sm text-gray-500 mt-1">Réponse sous 24h</p>
                </div>
              </div>
            </ScrollReveal>

            <ScrollReveal client:load direction="left" delay={0.4}>
              <div class="glass rounded-xl p-6 hover:bg-white/10 transition-all duration-300 flex items-start space-x-4">
                <div class="w-12 h-12 bg-accent/20 rounded-lg flex items-center justify-center flex-shrink-0">
                  <Phone size={24} className="text-accent" />
                </div>
                <div>
                  <h3 class="text-white font-semibold mb-2">Téléphone</h3>
                  <a href="tel:+33782760284" class="text-gray-300 hover:text-accent transition-colors">
                    07 82 76 02 84
                  </a>
                  <p class="text-sm text-gray-500 mt-1">Lun-Ven 9h-18h</p>
                </div>
              </div>
            </ScrollReveal>

            <ScrollReveal client:load direction="left" delay={0.5}>
              <div class="glass rounded-xl p-6 hover:bg-white/10 transition-all duration-300 flex items-start space-x-4">
                <div class="w-12 h-12 bg-accent/20 rounded-lg flex items-center justify-center flex-shrink-0">
                  <MapPin size={24} className="text-accent" />
                </div>
                <div>
                  <h3 class="text-white font-semibold mb-2">Localisation</h3>
                  <p class="text-gray-300">Tours, France</p>
                  <p class="text-sm text-gray-500 mt-1">Interventions à distance</p>
                </div>
              </div>
            </ScrollReveal>

            <ScrollReveal client:load direction="left" delay={0.6}>
              <div class="glass rounded-xl p-6 hover:bg-white/10 transition-all duration-300 flex items-start space-x-4">
                <div class="w-12 h-12 bg-accent/20 rounded-lg flex items-center justify-center flex-shrink-0">
                  <Clock size={24} className="text-accent" />
                </div>
                <div>
                  <h3 class="text-white font-semibold mb-2">Disponibilité</h3>
                  <p class="text-gray-300">Lundi - Vendredi</p>
                  <p class="text-sm text-gray-500 mt-1">9h00 - 18h00</p>
                </div>
              </div>
            </ScrollReveal>
          </div>

          <!-- Trust Indicators -->
          <ScrollReveal client:load direction="left" delay={0.7}>
            <div class="mt-10 p-6 bg-gradient-to-br from-accent/10 to-primary-500/10 border border-accent/20 rounded-xl">
              <h3 class="text-white font-semibold mb-4">Pourquoi me contacter ?</h3>
              <ul class="space-y-3">
                <li class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-accent rounded-full"></div>
                  <span class="text-gray-300">Devis gratuit et détaillé</span>
                </li>
                <li class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-accent rounded-full"></div>
                  <span class="text-gray-300">Conseils personnalisés</span>
                </li>
                <li class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-accent rounded-full"></div>
                  <span class="text-gray-300">Sans engagement</span>
                </li>
                <li class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-accent rounded-full"></div>
                  <span class="text-gray-300">Réponse garantie sous 24h</span>
                </li>
              </ul>
            </div>
          </ScrollReveal>
        </div>

        <!-- Contact Form -->
        <ScrollReveal client:load direction="right" delay={0.2}>
          <div class="glass rounded-2xl p-8">
            <h2 class="text-2xl font-heading font-bold text-white mb-6">
              Formulaire de Contact
            </h2>
            <ContactForm client:load />
          </div>
        </ScrollReveal>
      </div>
    </div>
  </section>

  <!-- FAQ rapide -->
  <section class="py-24 bg-dark-800/50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <ScrollReveal client:load>
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-heading font-bold text-white mb-4">
              Avant de Me Contacter
            </h2>
          </ScrollReveal>
          <ScrollReveal client:load delay={0.2}>
            <p class="text-gray-400">Questions fréquemment posées</p>
          </ScrollReveal>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {[
            {
              q: "Combien coûte un site web ?",
              a: "À partir de 1 500€ pour un site vitrine complet. Devis personnalisé gratuit."
            },
            {
              q: "Combien de temps pour créer un site ?",
              a: "En moyenne 2-3 semaines du brief à la mise en ligne."
            },
            {
              q: "Travaillez-vous à distance ?",
              a: "Oui, je travaille avec des clients dans toute la France."
            },
            {
              q: "Proposez-vous un paiement échelonné ?",
              a: "Oui, paiement en 2 ou 3 fois sans frais possible."
            }
          ].map((item, index) => (
            <ScrollReveal client:load delay={index * 0.1}>
              <div class="glass rounded-xl p-6 hover:bg-white/10 transition-colors">
                <h3 class="text-white font-semibold mb-2">{item.q}</h3>
                <p class="text-gray-400 text-sm">{item.a}</p>
              </div>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </div>
  </section>
</Layout>
