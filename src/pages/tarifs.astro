---
import Layout from '../layouts/Layout.astro';
import PricingCalculator from '../components/react/PricingCalculator';
import ScrollReveal from '../components/react/ScrollReveal';
import { Check, X, Star, ArrowRight, Zap } from 'lucide-react';
---

<Layout
  title="Tarifs - Création Sites Web & SEO Local | Renaissance"
  description="Découvrez nos tarifs transparents : Pack Essentiel 1500€, Pack Premium 2500€, Abonnement SEO 200€/mois. Devis gratuit sous 24h."
>
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-dark-900 via-dark-800 to-dark-900 relative overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-1/4 right-1/4 w-96 h-96 bg-primary-500/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 left-1/4 w-96 h-96 bg-accent/20 rounded-full blur-3xl"></div>
    </div>

    <div class="relative container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <ScrollReveal client:load>
        <h1 class="text-fluid-5xl font-heading font-bold text-white mb-6">
          Tarifs <span class="text-gradient">Transparents</span>
        </h1>
      </ScrollReveal>
      <ScrollReveal client:load delay={0.2}>
        <p class="text-fluid-xl text-gray-300 max-w-3xl mx-auto">
          Choisissez la formule adaptée à vos besoins. Tous nos prix sont fixes, sans surprise.
        </p>
      </ScrollReveal>
      <ScrollReveal client:load delay={0.3}>
        <p class="text-accent font-semibold mt-4">
          Devis gratuit sous 24h • Paiement en plusieurs fois possible
        </p>
      </ScrollReveal>
    </div>
  </section>

  <!-- Pricing Cards -->
  <section class="py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-7xl mx-auto">

        <!-- Pack Essentiel -->
        <ScrollReveal client:load delay={0.1}>
          <div class="glass rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:scale-105 flex flex-col h-full">
            <div class="mb-6">
              <h3 class="text-2xl font-heading font-bold text-white mb-2">Pack Essentiel</h3>
              <p class="text-gray-400">Pour démarrer sur le web</p>
            </div>

            <div class="mb-8">
              <div class="flex items-baseline">
                <span class="text-5xl font-bold text-white">1 500€</span>
              </div>
              <p class="text-sm text-gray-400 mt-2">Paiement unique</p>
            </div>

            <ul class="space-y-4 mb-8 flex-grow">
              {[
                { included: true, text: 'Site vitrine (5 pages)' },
                { included: true, text: 'Design moderne responsive' },
                { included: true, text: 'Optimisation SEO technique' },
                { included: true, text: 'Google Business Profile' },
                { included: true, text: 'Formation gestion site' },
                { included: true, text: '1 mois de support' },
                { included: false, text: 'Suivi SEO récurrent' },
                { included: false, text: 'Blog SEO' },
                { included: false, text: 'Reporting mensuel' }
              ].map((item) => (
                <li class="flex items-start space-x-3">
                  {item.included ? (
                    <Check size={20} className="text-accent flex-shrink-0 mt-0.5" />
                  ) : (
                    <X size={20} className="text-gray-600 flex-shrink-0 mt-0.5" />
                  )}
                  <span class={item.included ? 'text-gray-300' : 'text-gray-600'}>{item.text}</span>
                </li>
              ))}
            </ul>

            <a href="/contact" class="btn-secondary w-full text-center">
              Choisir Essentiel
            </a>
          </div>
        </ScrollReveal>

        <!-- Pack Premium (Recommended) -->
        <ScrollReveal client:load delay={0.2}>
          <div class="glass rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:scale-110 relative border-2 border-accent flex flex-col h-full transform md:scale-105 shadow-2xl shadow-accent/20">
            <div class="absolute -top-4 left-1/2 -translate-x-1/2">
              <div class="flex items-center space-x-2 px-4 py-2 bg-gradient-to-r from-primary-500 to-accent rounded-full">
                <Star size={16} className="text-white" />
                <span class="text-sm text-white font-semibold">Recommandé</span>
              </div>
            </div>

            <div class="mb-6 mt-4">
              <h3 class="text-2xl font-heading font-bold text-white mb-2">Pack Premium</h3>
              <p class="text-gray-400">La solution complète</p>
            </div>

            <div class="mb-8">
              <div class="flex items-baseline">
                <span class="text-5xl font-bold text-gradient">2 500€</span>
              </div>
              <p class="text-sm text-accent font-semibold mt-2">
                + 3 mois de SEO offerts (valeur 600€)
              </p>
            </div>

            <ul class="space-y-4 mb-8 flex-grow">
              {[
                { included: true, text: 'Tout du Pack Essentiel' },
                { included: true, text: 'Design premium façon agence' },
                { included: true, text: 'Blog SEO intégré' },
                { included: true, text: '3 mois de suivi SEO OFFERTS' },
                { included: true, text: 'Reporting mensuel' },
                { included: true, text: 'Photographie pro si besoin' },
                { included: true, text: 'Formation approfondie' },
                { included: true, text: 'Support prioritaire 3 mois' },
                { included: true, text: 'Stratégie contenu SEO' }
              ].map((item) => (
                <li class="flex items-start space-x-3">
                  <Check size={20} className="text-accent flex-shrink-0 mt-0.5" />
                  <span class="text-gray-300">{item.text}</span>
                </li>
              ))}
            </ul>

            <a href="/contact" class="btn-primary w-full text-center inline-flex items-center justify-center space-x-2 group">
              <span>Choisir Premium</span>
              <ArrowRight size={20} className="group-hover:translate-x-1 transition-transform" />
            </a>
          </div>
        </ScrollReveal>

        <!-- Abonnement SEO -->
        <ScrollReveal client:load delay={0.3}>
          <div class="glass rounded-2xl p-8 hover:bg-white/10 transition-all duration-300 hover:scale-105 flex flex-col h-full">
            <div class="mb-6">
              <div class="flex items-center space-x-2 mb-3">
                <Zap size={24} className="text-accent" />
                <h3 class="text-2xl font-heading font-bold text-white">Abonnement SEO</h3>
              </div>
              <p class="text-gray-400">Croissance continue</p>
            </div>

            <div class="mb-8">
              <div class="flex items-baseline">
                <span class="text-5xl font-bold text-white">200€</span>
                <span class="text-gray-400 ml-2">/mois</span>
              </div>
              <p class="text-sm text-accent font-semibold mt-2">Sans engagement</p>
            </div>

            <ul class="space-y-4 mb-8 flex-grow">
              {[
                { included: true, text: 'Optimisation continue' },
                { included: true, text: 'Ajout contenu mensuel' },
                { included: true, text: 'Suivi positions Google' },
                { included: true, text: 'Reporting détaillé' },
                { included: true, text: 'Support prioritaire' },
                { included: true, text: 'Analyse concurrence' },
                { included: true, text: 'Mises à jour sécurité' },
                { included: true, text: 'Recommandations stratégiques' },
                { included: true, text: 'Sans engagement' }
              ].map((item) => (
                <li class="flex items-start space-x-3">
                  <Check size={20} className="text-accent flex-shrink-0 mt-0.5" />
                  <span class="text-gray-300">{item.text}</span>
                </li>
              ))}
            </ul>

            <a href="/contact" class="btn-secondary w-full text-center">
              S'abonner
            </a>
          </div>
        </ScrollReveal>
      </div>

      <!-- Additional Info -->
      <ScrollReveal client:load delay={0.4}>
        <div class="max-w-4xl mx-auto mt-16 text-center">
          <div class="glass rounded-xl p-8">
            <h3 class="text-2xl font-heading font-bold text-white mb-4">
              Garanties Incluses
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
              <div>
                <div class="w-12 h-12 bg-accent/20 rounded-xl flex items-center justify-center mx-auto mb-3">
                  <Check size={24} className="text-accent" />
                </div>
                <h4 class="text-white font-semibold mb-2">Satisfaction Garantie</h4>
                <p class="text-sm text-gray-400">Révisions illimitées jusqu'à validation</p>
              </div>
              <div>
                <div class="w-12 h-12 bg-accent/20 rounded-xl flex items-center justify-center mx-auto mb-3">
                  <Zap size={24} className="text-accent" />
                </div>
                <h4 class="text-white font-semibold mb-2">Performances Garanties</h4>
                <p class="text-sm text-gray-400">Score Lighthouse 95+ ou remboursement</p>
              </div>
              <div>
                <div class="w-12 h-12 bg-accent/20 rounded-xl flex items-center justify-center mx-auto mb-3">
                  <Star size={24} className="text-accent" />
                </div>
                <h4 class="text-white font-semibold mb-2">Support Réactif</h4>
                <p class="text-sm text-gray-400">Réponse garantie sous 24h ouvrées</p>
              </div>
            </div>
          </div>
        </div>
      </ScrollReveal>
    </div>
  </section>

  <!-- Pricing Calculator Section -->
  <section class="py-24 bg-dark-800/50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <ScrollReveal client:load>
          <h2 class="text-fluid-4xl font-heading font-bold text-white mb-4">
            Estimez Votre <span class="text-gradient">Projet Sur-Mesure</span>
          </h2>
        </ScrollReveal>
        <ScrollReveal client:load delay={0.2}>
          <p class="text-fluid-lg text-gray-400 max-w-2xl mx-auto">
            Personnalisez les options pour obtenir une estimation adaptée à vos besoins
          </p>
        </ScrollReveal>
      </div>

      <ScrollReveal client:load delay={0.3}>
        <PricingCalculator client:load />
      </ScrollReveal>
    </div>
  </section>

  <!-- Comparison Table -->
  <section class="py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <ScrollReveal client:load>
          <h2 class="text-fluid-4xl font-heading font-bold text-white mb-4">
            Tableau <span class="text-gradient">Comparatif</span>
          </h2>
        </ScrollReveal>
        <ScrollReveal client:load delay={0.2}>
          <p class="text-fluid-lg text-gray-400 max-w-2xl mx-auto">
            Comparez les fonctionnalités de chaque pack
          </p>
        </ScrollReveal>
      </div>

      <ScrollReveal client:load delay={0.3}>
        <div class="max-w-5xl mx-auto overflow-x-auto">
          <table class="w-full glass rounded-2xl overflow-hidden">
            <thead>
              <tr class="border-b border-white/10">
                <th class="text-left p-6 text-white font-semibold">Fonctionnalités</th>
                <th class="p-6 text-center text-white font-semibold">Essentiel</th>
                <th class="p-6 text-center text-white font-semibold bg-accent/10">Premium</th>
                <th class="p-6 text-center text-white font-semibold">Abonnement</th>
              </tr>
            </thead>
            <tbody>
              {[
                { feature: 'Nombre de pages', essential: '5', premium: '8-10', subscription: 'N/A' },
                { feature: 'Design responsive', essential: true, premium: true, subscription: 'N/A' },
                { feature: 'SEO technique', essential: true, premium: true, subscription: true },
                { feature: 'Blog intégré', essential: false, premium: true, subscription: 'N/A' },
                { feature: 'Suivi SEO', essential: '1 mois', premium: '3 mois', subscription: 'Illimité' },
                { feature: 'Reporting mensuel', essential: false, premium: true, subscription: true },
                { feature: 'Contenu mensuel', essential: false, premium: false, subscription: true },
                { feature: 'Support', essential: '1 mois', premium: '3 mois', subscription: 'Prioritaire' }
              ].map((row, index) => (
                <tr class="border-b border-white/5 hover:bg-white/5 transition-colors">
                  <td class="p-6 text-gray-300">{row.feature}</td>
                  <td class="p-6 text-center text-gray-400">
                    {typeof row.essential === 'boolean' ? (
                      row.essential ? <Check size={20} className="text-accent mx-auto" /> : <X size={20} className="text-gray-600 mx-auto" />
                    ) : row.essential}
                  </td>
                  <td class="p-6 text-center text-white bg-accent/5">
                    {typeof row.premium === 'boolean' ? (
                      row.premium ? <Check size={20} className="text-accent mx-auto" /> : <X size={20} className="text-gray-600 mx-auto" />
                    ) : row.premium}
                  </td>
                  <td class="p-6 text-center text-gray-400">
                    {typeof row.subscription === 'boolean' ? (
                      row.subscription ? <Check size={20} className="text-accent mx-auto" /> : <X size={20} className="text-gray-600 mx-auto" />
                    ) : row.subscription}
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </ScrollReveal>
    </div>
  </section>

  <!-- FAQ Pricing -->
  <section class="py-24 bg-dark-800/50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
          <ScrollReveal client:load>
            <h2 class="text-fluid-3xl font-heading font-bold text-white mb-4">
              Questions sur les Tarifs
            </h2>
          </ScrollReveal>
        </div>

        <div class="space-y-6">
          {[
            {
              q: "Puis-je payer en plusieurs fois ?",
              a: "Oui, nous proposons un paiement en 2 ou 3 fois sans frais pour tous nos packs."
            },
            {
              q: "Y a-t-il des frais cachés ?",
              a: "Non, nos prix sont tout compris. Les seuls frais additionnels sont l'hébergement (~10€/mois) et le nom de domaine (~15€/an)."
            },
            {
              q: "Puis-je changer de pack après la commande ?",
              a: "Oui, vous pouvez upgrader vers le Pack Premium à tout moment en payant simplement la différence."
            },
            {
              q: "L'abonnement SEO nécessite-t-il un engagement ?",
              a: "Non, l'abonnement est sans engagement. Vous pouvez l'arrêter quand vous le souhaitez avec un préavis de 30 jours."
            }
          ].map((item, index) => (
            <ScrollReveal client:load delay={index * 0.1}>
              <div class="glass rounded-xl p-6 hover:bg-white/10 transition-colors">
                <h3 class="text-lg font-semibold text-white mb-3">{item.q}</h3>
                <p class="text-gray-300 leading-relaxed">{item.a}</p>
              </div>
            </ScrollReveal>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="py-24 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary-500/20 via-accent/20 to-primary-500/20"></div>
    <div class="absolute inset-0 backdrop-blur-3xl"></div>

    <div class="relative container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <ScrollReveal client:load>
          <h2 class="text-fluid-4xl font-heading font-bold text-white mb-6">
            Prêt à Démarrer ?
          </h2>
        </ScrollReveal>
        <ScrollReveal client:load delay={0.2}>
          <p class="text-fluid-lg text-gray-300 mb-10">
            Obtenez votre devis personnalisé gratuit en moins de 24h
          </p>
        </ScrollReveal>
        <ScrollReveal client:load delay={0.4}>
          <a href="/contact" class="btn-primary inline-flex items-center space-x-2 group text-lg px-8 py-4">
            <span>Demander mon devis gratuit</span>
            <ArrowRight size={24} className="group-hover:translate-x-1 transition-transform" />
          </a>
        </ScrollReveal>
      </div>
    </div>
  </section>
</Layout>
