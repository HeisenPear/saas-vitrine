---
import Layout from '../layouts/Layout.astro';
import ScrollReveal from '../components/react/ScrollReveal';
import AnimatedCounter from '../components/react/AnimatedCounter';
import { ExternalLink, TrendingUp, Clock } from 'lucide-react';

const projects = [
  {
    id: 1,
    title: 'Élagage Pro Services',
    sector: 'Élagueur',
    description: 'Refonte complète du site web et optimisation SEO local pour cet élagueur professionnel basé à Lyon.',
    result: '+200% de visibilité locale en 3 mois',
    image: 'https://images.unsplash.com/photo-1586281380349-632531db7ed4?w=800&h=600&fit=crop',
    tags: ['Site Vitrine', 'SEO Local', 'Design Modern'],
    stats: [
      { label: 'Trafic', value: '+200%' },
      { label: 'Positions Google', value: 'Top 3' },
      { label: 'Délai', value: '6 semaines' }
    ]
  },
  {
    id: 2,
    title: 'Plomberie Dupont',
    sector: 'Plombier',
    description: 'Création d\'un site vitrine moderne avec système de prise de rendez-vous en ligne et optimisation SEO.',
    result: '+150% de demandes de devis',
    image: 'https://images.unsplash.com/photo-1607472586893-edb57bdc0e39?w=800&h=600&fit=crop',
    tags: ['Site Vitrine', 'SEO', 'Formulaire'],
    stats: [
      { label: 'Demandes', value: '+150%' },
      { label: 'Score Lighthouse', value: '98' },
      { label: 'Délai', value: '3 semaines' }
    ]
  },
  {
    id: 3,
    title: 'Boulangerie Artisanale',
    sector: 'Artisan boulanger',
    description: 'Site vitrine élégant avec galerie de produits et optimisation pour le référencement local.',
    result: '1ère page Google en 2 mois',
    image: 'https://images.unsplash.com/photo-1509440159596-0249088772ff?w=800&h=600&fit=crop',
    tags: ['Site Vitrine', 'Galerie', 'SEO Local'],
    stats: [
      { label: 'Position Google', value: '#1' },
      { label: 'Trafic', value: '+180%' },
      { label: 'Délai', value: '4 semaines' }
    ]
  },
  {
    id: 4,
    title: 'Alexandre Moreau - Coach Sportif',
    sector: 'Coaching Sportif & Mental',
    description: 'Création d\'un site vitrine one-page moderne pour coach sportif et mental basé à Paris. Design impactant avec formulaire de réservation.',
    result: '+250% de réservations en 3 mois',
    image: 'https://images.unsplash.com/photo-1571019614242-c5c5dee9f50b?w=800&h=600&fit=crop',
    tags: ['Site Vitrine', 'One-Page', 'SEO Local'],
    stats: [
      { label: 'Réservations', value: '+250%' },
      { label: 'Score Design', value: '10/10' },
      { label: 'Délai', value: '3 semaines' }
    ]
  },
  {
    id: 5,
    title: 'Menuiserie Bois & Art',
    sector: 'Menuisier',
    description: 'Création d\'un site portfolio élégant avec galerie de réalisations et formulaire de devis en ligne.',
    result: '+120% de demandes de devis',
    image: 'https://images.unsplash.com/photo-1504148455328-c376907d081c?w=800&h=600&fit=crop',
    tags: ['Portfolio', 'Galerie', 'SEO'],
    stats: [
      { label: 'Devis', value: '+120%' },
      { label: 'Engagement', value: '+90%' },
      { label: 'Délai', value: '4 semaines' }
    ]
  },
  {
    id: 6,
    title: 'Toiture & Couverture Pro',
    sector: 'Couvreur',
    description: 'Site web complet avec blog SEO et optimisation pour les recherches locales de services de toiture.',
    result: 'Top 3 Google Maps',
    image: 'https://images.unsplash.com/photo-1632778149955-e80f8ceca2e8?w=800&h=600&fit=crop',
    tags: ['Site Complet', 'Blog SEO', 'Google Maps'],
    stats: [
      { label: 'Position Maps', value: 'Top 3' },
      { label: 'Appels', value: '+160%' },
      { label: 'Délai', value: '6 semaines' }
    ]
  }
];
---

<Layout
  title="Portfolio - Nos Réalisations Web & SEO | Renaissance"
  description="Découvrez nos projets réussis : sites web modernes et stratégies SEO pour artisans et PME. Résultats concrets et mesurables."
>
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-dark-900 via-dark-800 to-dark-900 relative overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-1/4 right-1/4 w-96 h-96 bg-primary-500/20 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 left-1/4 w-96 h-96 bg-accent/20 rounded-full blur-3xl"></div>
    </div>

    <div class="relative container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <ScrollReveal client:load>
        <h1 class="text-fluid-5xl font-heading font-bold text-white mb-6">
          Nos <span class="text-gradient">Réalisations</span>
        </h1>
      </ScrollReveal>
      <ScrollReveal client:load delay={0.2}>
        <p class="text-fluid-xl text-gray-300 max-w-3xl mx-auto">
          Découvrez comment nous avons aidé nos clients à transformer leur visibilité en ligne
          et générer plus de clients
        </p>
      </ScrollReveal>
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        {projects.map((project, index) => (
          <ScrollReveal client:load delay={index * 0.1}>
            <div class="group glass rounded-2xl overflow-hidden hover:bg-white/10 transition-all duration-500 hover:scale-105 hover:-translate-y-2 flex flex-col h-full">
              <!-- Image -->
              <div class="relative h-64 overflow-hidden">
                <img
                  src={project.image}
                  alt={project.title}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-dark-900 via-dark-900/50 to-transparent"></div>

                <!-- Tags -->
                <div class="absolute top-4 left-4 flex flex-wrap gap-2">
                  {project.tags.map((tag) => (
                    <span class="px-3 py-1 bg-dark-900/80 backdrop-blur-sm border border-white/10 rounded-full text-xs text-gray-300">
                      {tag}
                    </span>
                  ))}
                </div>

                <!-- Sector Badge -->
                <div class="absolute bottom-4 left-4">
                  <span class="px-3 py-1 bg-accent/20 border border-accent rounded-full text-sm text-accent font-semibold">
                    {project.sector}
                  </span>
                </div>
              </div>

              <!-- Content -->
              <div class="p-6 flex-grow flex flex-col">
                <h3 class="text-2xl font-heading font-bold text-white mb-3 group-hover:text-gradient transition-colors">
                  {project.title}
                </h3>

                <p class="text-gray-400 mb-4 leading-relaxed flex-grow">
                  {project.description}
                </p>

                <!-- Result -->
                <div class="flex items-center space-x-2 mb-4 p-3 bg-accent/10 border border-accent/20 rounded-lg">
                  <TrendingUp size={20} className="text-accent flex-shrink-0" />
                  <span class="text-sm text-white font-semibold">{project.result}</span>
                </div>

                <!-- Stats -->
                <div class="grid grid-cols-3 gap-3 mb-4">
                  {project.stats.map((stat) => (
                    <div class="text-center">
                      <div class="text-lg font-bold text-gradient">{stat.value}</div>
                      <div class="text-xs text-gray-500">{stat.label}</div>
                    </div>
                  ))}
                </div>

                <!-- CTA -->
                <a
                  href={project.id === 4 ? '/demos/coach-alexandre-moreau/index.html' : '#'}
                  target={project.id === 4 ? '_blank' : '_self'}
                  class="w-full mt-auto px-4 py-3 bg-white/5 hover:bg-accent/20 border border-white/10 hover:border-accent rounded-lg text-white font-semibold transition-all duration-300 flex items-center justify-center space-x-2 group"
                >
                  <span>{project.id === 4 ? 'Voir le site démo' : 'Voir le cas client'}</span>
                  <ExternalLink size={16} className="group-hover:translate-x-1 transition-transform" />
                </a>
              </div>
            </div>
          </ScrollReveal>
        ))}
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-24 bg-dark-800/50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-5xl mx-auto text-center">
        <ScrollReveal client:load>
          <h2 class="text-fluid-4xl font-heading font-bold text-white mb-4">
            Résultats <span class="text-gradient">Mesurables</span>
          </h2>
        </ScrollReveal>
        <ScrollReveal client:load delay={0.2}>
          <p class="text-fluid-lg text-gray-400 mb-16">
            Nos clients obtiennent des résultats concrets
          </p>
        </ScrollReveal>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          <ScrollReveal client:load delay={0.3}>
            <div class="glass rounded-xl p-6 hover:bg-white/10 transition-all duration-300">
              <div class="text-fluid-3xl font-bold text-gradient mb-2">
                <AnimatedCounter client:load value={50} suffix="+" />
              </div>
              <div class="text-sm text-gray-400">Projets réalisés</div>
            </div>
          </ScrollReveal>

          <ScrollReveal client:load delay={0.4}>
            <div class="glass rounded-xl p-6 hover:bg-white/10 transition-all duration-300">
              <div class="text-fluid-3xl font-bold text-gradient mb-2">
                +<AnimatedCounter client:load value={180} suffix="%" />
              </div>
              <div class="text-sm text-gray-400">Trafic moyen</div>
            </div>
          </ScrollReveal>

          <ScrollReveal client:load delay={0.5}>
            <div class="glass rounded-xl p-6 hover:bg-white/10 transition-all duration-300">
              <div class="text-fluid-3xl font-bold text-gradient mb-2">
                <AnimatedCounter client:load value={95} suffix="+" />
              </div>
              <div class="text-sm text-gray-400">Score Lighthouse</div>
            </div>
          </ScrollReveal>

          <ScrollReveal client:load delay={0.6}>
            <div class="glass rounded-xl p-6 hover:bg-white/10 transition-all duration-300">
              <div class="text-fluid-3xl font-bold text-gradient mb-2">24h</div>
              <div class="text-sm text-gray-400">Support réactif</div>
            </div>
          </ScrollReveal>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary-500/20 via-accent/20 to-primary-500/20"></div>
    <div class="absolute inset-0 backdrop-blur-3xl"></div>

    <div class="relative container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <ScrollReveal client:load>
          <h2 class="text-fluid-4xl font-heading font-bold text-white mb-6">
            Votre Projet Sera le Prochain ?
          </h2>
        </ScrollReveal>
        <ScrollReveal client:load delay={0.2}>
          <p class="text-fluid-lg text-gray-300 mb-10">
            Discutons de vos objectifs et créons ensemble votre succès en ligne
          </p>
        </ScrollReveal>
        <ScrollReveal client:load delay={0.4}>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a href="/contact" class="btn-primary inline-flex items-center space-x-2">
              <span>Démarrer mon projet</span>
            </a>
            <a href="/tarifs" class="btn-secondary">
              Voir les tarifs
            </a>
          </div>
        </ScrollReveal>
      </div>
    </div>
  </section>
</Layout>
